<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.example.javagroupproject1.controller.Bar?>

<?import com.sun.javafx.scene.control.IntegerField?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javagroupproject1.controller.RecipeController">
   <Bar/>
   <stylesheets>
      <URL value="@../styles/default.css" />
      <URL value="@../styles/bar.css" />
      <URL value="@../styles/recipe.css" />
   </stylesheets>
   <children>
      <ScrollPane>
         <content>
            <VBox styleClass="veve-box">
               <children>
                  <HBox styleClass="hehe-box">
                     <children>
                        <Label text="НАЗВАНИЕ" />
                        <TextField fx:id="name" />
                     </children>
                  </HBox>
                  <HBox styleClass="hehe-box">
                     <children>
                        <Label text="КАТЕГОРИЯ" />
                        <ComboBox fx:id="categories" editable="true" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox styleClass="hehe-box">
                     <children>
                        <Label text="ФОТО" />
                        <Button onAction="#imageClick" mnemonicParsing="false">
                           <graphic>
                              <ImageView fx:id="image" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <HBox styleClass="hehe-box">
                     <children>
                        <Label text="КОЛ-ВО ПОРЦИЙ" />
                        <TextField fx:id="portions"/>
                     </children>
                  </HBox>
                  <HBox styleClass="hehe-box">
                     <children>
                        <Label text="ВРЕМЯ ПРИГТОВЛЕНИЯ" />
                        <TextField fx:id="time"/>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" styleClass="button-hehe">
                     <children>
                        <Button mnemonicParsing="false" onAction="#saveClick" styleClass="bebe-buton" text="СОХРАНИТЬ" />
                        <Button mnemonicParsing="false" onAction="#closeClick" styleClass="bebe-buton" text="ЗАКРЫТЬ" />
                        <Button mnemonicParsing="false" onAction="#deleteClick" styleClass="bebe-buton" text="УДАЛИТЬ" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
